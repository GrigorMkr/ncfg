{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "singularName": "person",
    "pluralName": "people",
    "displayName": "Person",
    "description": "Team members and experts"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "fullName": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "personId": {
      "type": "string",
      "maxLength": 50
    },
    "isTeam": {
      "type": "boolean",
      "default": false
    },
    "isExpert": {
      "type": "boolean",
      "default": false
    },
    "notes": {
      "type": "text"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "team": {
      "type": "component",
      "repeatable": false,
      "component": "person.team-info"
    },
    "expertProfile": {
      "type": "component",
      "repeatable": false,
      "component": "person.expert-profile"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
